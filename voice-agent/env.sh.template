# Voice Agent Environment Variables
# Copy to env.sh and fill in your values:
#   cp env.sh.template env.sh
#   source env.sh

# Azure OpenAI (required)
export AzureOpenAI__Endpoint="https://your-resource.openai.azure.com/"
export AzureOpenAI__ApiKey="your-api-key"
export AzureOpenAI__DeploymentName="gpt-4o"

# Agent settings (optional - defaults shown)
export AGENT_PORT="8766"
export GRAPHQL_API_URL="http://localhost:5001/graphql"

# MCP Server (optional - defaults shown)
export MCP_COMMAND="dotnet"
export MCP_ARGS="run --project /path/to/TimeReportingMcp/TimeReportingMcp.csproj"
