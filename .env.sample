# Voice Assistant Environment Variables
# Copy to .env and fill in your values:
#   cp .env.sample .env

# =============================================================================
# Azure OpenAI (required for Agent)
# =============================================================================
AzureOpenAI__Endpoint=https://your-resource.openai.azure.com/
AzureOpenAI__ApiKey=your-api-key
AzureOpenAI__DeploymentName=gpt-4o

# =============================================================================
# Azure Speech (required for TTS)
# =============================================================================
AzureSpeech__Region=eastus
AzureSpeech__ApiKey=your-api-key

# =============================================================================
# Telemetry (Azure Application Insights)
# =============================================================================
APPLICATIONINSIGHTS_CONNECTION_STRING=

# =============================================================================
# Device Pairing (for headless RPi authentication)
# =============================================================================
AUTH_METHOD=device-pairing
DEVICE_ID=rpi-living-room
DEVICE_SECRET=your-device-secret
PAIRING_FUNCTION_URL=https://func-device-pairing.azurewebsites.net

# =============================================================================
# Time Reporting API
# =============================================================================
# Use mDNS name for cross-device access on local network
GRAPHQL_API_URL=http://su-macbook-1dfa.local:5001/graphql

# =============================================================================
# Agent Configuration (optional)
# =============================================================================
# AGENT_CHARACTER=invisigal
# SESSION_TIMEOUT_HOURS=4
# CONFIRMATION_TIMEOUT_MINUTES=2
